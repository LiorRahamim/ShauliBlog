<body id="">
    <header>
        <text align="left"><h1>Ha-blog Shel Shauli</h1></text>
        <div style="height: 50px">
            @Html.Partial("_LoginPartial")
        </div>
        <audio autoplay>
            <source src="~/audio/blog intro.mp3" type="audio/mpeg">
        </audio>
    </header>
    <nav>
        <ul>
            <li>@Html.ActionLink("Blog", "Blog", "Blog")</li>
            <li>@Html.ActionLink("Fan Club", "Index", "Fans")</li>
            <li>
                <div id="transDemo2">
                    <div class="hover">
                        <img src="~/Images/rss.png" width="30" height="30">
