                </header>
                @RenderPage("~/Views/Shared/StatisticsWidget.cshtml")
            </section>
            <section>
                <header>
                    <h3>I send you all a big smile</h3>
                </header>
                <canvas id="ShauliCanvas" width="150" height="150" style="border:1px solid #d3d3d3;"></canvas>
            </section>
            <section>
                <header>
                    <h3>More Comedy!</h3>
                </header>
                @RenderPage("~/Views/Shared/TwitterWidget.cshtml")
            </section>
        </aside>
    </div>
    <footer>
