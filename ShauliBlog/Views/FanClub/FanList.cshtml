@model IEnumerable<ShauliBlog.Models.Fan>

@{
    ViewBag.Title = "FanList";
}

<h2>Fan list</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clubSeniority)
        </th>
    </tr>

    @foreach (var fan in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => fan.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => fan.sn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => fan.gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => fan.birthday)
    </td>
    <td>
        @Html.DisplayFor(modelItem => fan.clubSeniority)
    </td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            @Html.ActionLink("Edit", "EditFan", new { ID = fan.ID })
            @Html.ActionLink("Details", "FanDetails", new { ID = fan.ID })
            @Html.ActionLink("Delete", "DeleteFanDetails", new { ID = fan.ID })
        </td>
    }
    </tr>
    }
</table>
<div>
    @Html.ActionLink("Create New Fan", "CreateNewFan")
</div>